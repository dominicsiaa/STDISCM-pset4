@inject AuthenticationService AuthenticationService
@rendermode InteractiveServer
@using System.Security.Claims

<div class="top-row navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold" href="">
            Classify
        </a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()" style="width: 150px;">
    <nav class="flex-column">
        <div class="nav-item px-2">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-2">
            <NavLink class="nav-link" href="courses">
                <span class="bi bi-book-fill-nav-menu" aria-hidden="true"></span> Courses
            </NavLink>
        </div>

        <div class="nav-item px-2">
            <NavLink class="nav-link" href="grades">
                <span class="bi bi-book-fill-nav-menu" aria-hidden="true"></span> Grades
            </NavLink>
        </div>

        <div class="nav-item px-2">
            <NavLink class="nav-link" href="rate-prof">
                <span class="bi bi-book-fill-nav-menu" aria-hidden="true"></span> Rate Prof
            </NavLink>
        </div>

        <div class="nav-item px-2">
            <button class="nav-link" @onclick="Logout">
                <span class="bi bi-arrow-right-nav-menu" aria-hidden="true"></span> Logout
            </button>
        </div>
    </nav>
</div>

@code {
    private async Task Logout()
    {
        await AuthenticationService.Logout();
    }
}